<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="377dp"
        android:layout_height="125dp"
        android:layout_margin="20dp"
        app:srcCompat="@drawable/felicitaciones" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/shablagooital"
        android:text="X respuestas correctas"
        android:textAlignment="center"
        android:textSize="30sp" />

    <info.hoang8f.widget.FButton
        android:id="@+id/playAgainButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"        
        android:text="@string/play_again"
        android:textSize="30sp"
        android:textColor="@color/white" />

    <info.hoang8f.widget.FButton
        android:id="@+id/sharebutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:foreground="@android:drawable/ic_menu_share"
        android:foregroundGravity="center_vertical|right"
        android:text="@string/share"
        android:textSize="30sp"
        fbutton:buttonColor="@color/lightGreen" />

    <info.hoang8f.widget.FButton
        android:id="@+id/progressbutton"
        fbutton:buttonColor="@color/lightGreen"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="15dp"
        android:textSize="25sp"        
        android:text="@string/progress" />

</LinearLayout>