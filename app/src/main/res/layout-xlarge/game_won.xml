<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:orientation="vertical">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_margin="20dp"
        app:srcCompat="@drawable/felicitaciones" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/shablagooital"
        android:text="X respuestas correctas"
        android:textAlignment="center"
        android:textSize="35sp" />
        
    <info.hoang8f.widget.FButton
        android:id="@+id/playAgainButton"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="15dp"
        android:text="@string/play_again"
        android:textColor="@color/white"
        android:textSize="35sp" />
        
    <info.hoang8f.widget.FButton
        android:id="@+id/sharebutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:textSize="35sp"
        android:foreground="@android:drawable/ic_menu_share"
        android:foregroundGravity="center_vertical|right"
        android:text="@string/share" />
        
     <info.hoang8f.widget.FButton
        android:id="@+id/progressbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:textSize="35sp"        
        android:text="@string/progress" />
</LinearLayout>